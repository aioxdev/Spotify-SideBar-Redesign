<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SpotifyNavBar.Components.Playlist">
	
	<Grid RowDefinitions="Auto,Auto">
		<Grid Grid.Row="0" x:Name="menuTextPart">
			<TextBlock Text="PLAYLIST" FontWeight="Medium" FontSize="10" Foreground="rgba(255,255,255,0.4)"/>
		</Grid>
		<Grid Grid.Row="1" Margin="0 15 0 0" x:Name="menuItemPart">
			<StackPanel Orientation="Vertical" Spacing="5" x:Name="navItems">
				<Button Classes="playlistItem" Content="Top Hit 2021 USA"/>
				<Button Classes="playlistItem" Content="Dance"/>
				<Button Classes="playlistItem" Content="Chill"/>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
